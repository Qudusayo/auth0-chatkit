{
  "manifest_version": 3,
  "name": "Auth0 Chatkit",
  "description": "Auth0 Chat Kit", 
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Auth0 Chatkit",
    "default_icon": "icon.png"
  },
  "permissions": ["tabs", "bookmarks", "storage", "identity"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
